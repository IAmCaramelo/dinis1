extends navbar

append content
    div(class="container",style="margin-top:40px;")
        p 
        if(jogos)
            each jogo in jogos
                each dados in jogo
                    div(class="container", style="text-align:center;")
                        center(style="text-align:center;")
                            div(style="margin-left:auto; margin-right:auto;")
                                - var jg = dados;
                                div(style="float:left;margin-left:25%")
                                    img(class="img-responsive",id="lol" style="height:150px;width:150px;", src=jg.equipaCasa)
                                    div(style="float:right")
                                        span(style="font-size:24px;font-weight:900;") #{jg.nome}
                                        p(style="font-size:24px;font-weight:900;") #{jg.golosCasa} : #{jg.golosFora}
                                div(style="margin-left:auto; margin-right:auto; float:left")
                                    img(class="img-responsive",style="height:150px;width:150px;",src=jg.equipaFora)